<?xml version="1.0"?>
	<run>
	    <template>
	        <about>This is a Nautilus template for the sod shock</about>
	    </template>
	    
        <input>
	        <number id="gasGamma">
	            <about>
	                <label>gas gamma</label>
	                <description>specific heat ratio</description>
	            </about>
	            <units>unitless</units>
	            <default>1.6666</default>
            </number>

	        <formula id="density">
	            <about>
	                <label>density over the entire domain</label>
	                <description>mass density</description>
	            </about>
	            <units>kg/m^3</units>
	            <default>1.0e5</default>
            </formula>
   
	        <formula id="pressure">
	            <about>
	                <label>pressure on the right half of the domain</label>
	                <description>Pressure second dude!</description>
	            </about>
	            <units>pascals</units>
	            <default>1.0e5</default>
	        </formula>

	        <formula id="ux">
	            <about>
	                <label>velocity in the x direction</label>
	                <description>x velocity</description>
	            </about>
	            <units> m/s </units>
	            
	            <default>0.0</default>
            </formula>

	        <formula id="uy">
	            <about>
	                <label>velocity in the y direction</label>
	                <description>y velocity</description>
	            </about>
	            <units> m/s </units>
	            
	            <default>0.0</default>
            </formula>

	        <formula id="uz">
	            <about>
	                <label>velocity in the z direction</label>
	                <description>z velocity</description>
	            </about>
	            <units> m/s </units>
	            
	            <default>0.0</default>
            </formula>
            
            <choice id="limiter">
                <about>
                    <label>Choose the limiter</label>
                    <description>Method of reducing oscillations at shocks.</description>
                </about>

                <option>
                    <about>
                        <label>component limiter</label>
                    </about>
                    <value>componentMinMod</label>
                </option>

                <option>
                    <about>
                        <label>characteristic</label>
                    </about>
                    <value>characteristicMinMod</value>
                </option>

                <default>characteristicMinMod</default>
            </choice>
            
            <choice id="numericalFlux">
                <about>
                    <label>Choose the numericalFlux</label>
                    <description>Approximation of the flux across a face</description>
                </about>

                <option>
                    <about>
                        <label>local Lax flux</label>
                    </about>
                    <value>localLaxFlux</label>
                </option>

                <option>
                    <about>
                        <label>fWave flux</label>
                    </about>
                    <value>fWaveFlux</value>
                </option>
                
                <option>
                    <about>
                        <label>hllc flux</label>
                    </about>
                    <value>hllcFlux</value>
                </option>

                <default>characteristicMinMod</default>
            </choice>
            
        </input>

	</run>
